<%- include ('../partials/head.ejs') %>
<body>
   <div class="text-center">
       <div class="p-5">
           <form class="user" action="/login" method="POST" style="max-width: 480px; margin: auto;">
                <div class="text-center">
                    <h4 class="text-dark mb-4 fs-1">Login</h4>
                </div>
                <div class="mb-3">
                    <input class="form-control form-control-user" type="email" name="email" id="emailInput" aria-describedby="emailHelp" placeholder="Enter e-mail address">
                </div>
                <div class="mb-3">
                    <input class="form-control form-control-user" type="password" name="password" id="passwordInput" placeholder="Password">
                </div>
                <button class="btn btn-primary d-block btn-user w-100 mb-3" type="submit">Sign In</button>
           </form>
           <form class="user" action="/signup" method="GET" style="max-width: 480px; margin: auto;">
                <button class="btn btn-outline-dark d-block btn-user w-100" type="submit">Register</button>
                <hr>
           </form>
           <div class="text-center">
               <a class="small" href="">Forgot password?</a>
           </div>
       </div>
   </div>
</body>
